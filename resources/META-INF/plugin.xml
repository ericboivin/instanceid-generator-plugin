<idea-plugin version="2">
  <id>com.github.ericboivin.instanceidgenerator</id>
  <name>Instance ID Generator</name>
  <version>1.0</version>
  <vendor>Eric Boivin (@ericboivin)</vendor>

  <description><![CDATA[
      A universally unique identifier (UUID) generator.<br/>
      <br/>
      For example : <em>aomv</em>.<br/>
      <br>
      You will find it in the <strong>Generate popup</strong> -> <strong>random 4 letters string</strong>.
    ]]></description>

  <change-notes><![CDATA[
      First version!
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.lang</depends>


  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <action id="instanceidgenerator.random" class="myplugins.InstanceIDGenerator" text="Random 4 letters"
            description="Generate a random 4 letter String">
      <add-to-group group-id="GenerateGroup" anchor="last"/>
    </action>
  </actions>

</idea-plugin>
